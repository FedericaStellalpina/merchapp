    <td><%= data_row.id %></td>
    <td><%= data_row.item %></td>
    <td><%= data_row.size %></td>
    <td><%= data_row.type %></td>
    <td><%= data_row.price %></td>
    <td><%= data_row.expected %></td>
    <td><%= data_row.count %></td>
    <td>n/a</td>
    <td>n/a</td>
    <td>n/a</td>
    <td><a href="/delete?id=<%= data_row.id %>">delete</a> <a href="/edit?id=<%= data_row.id %>">edit</a></td>
  </tr>
  <% end %>
